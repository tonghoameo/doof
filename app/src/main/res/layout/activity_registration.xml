<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RegistrationActivity">

    <ImageView
        android:id="@+id/regimg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/foreground_design"
        android:scaleType="centerCrop"
        android:src="@drawable/reg"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="-82dp" />

    <TextView
        android:id="@+id/regtxt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="welcome from my shop coffee"
        android:textAlignment="center"
        android:textSize="33sp"
        android:fontFamily="@font/lobster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/regimg"
        app:layout_constraintVertical_bias="0.2"
        />
    <TextView
        android:id="@+id/regtxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Register"
        android:textAlignment="center"
        android:textSize="19sp"
        android:fontFamily="@font/lobster"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/regtxt1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2"
        />
    <EditText
        android:id="@+id/regname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Full Name"
        
        android:textSize="19sp"
        android:fontFamily="@font/lobster"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/regtxt2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintWidth_percent=".8"
        android:drawableLeft="@drawable/baseline_account_box_24"
        android:drawablePadding="13dp"
        android:backgroundTint="#CCCCCC"
        />
    <EditText
        android:id="@+id/regemail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Email "

        android:textSize="19sp"
        android:fontFamily="@font/lobster"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/regname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintWidth_percent=".8"
        android:drawableLeft="@drawable/baseline_attach_email_24"
        android:drawablePadding="13dp"
        android:backgroundTint="#CCCCCC"
        />
    <EditText
        android:id="@+id/regpassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Password"

        android:textSize="19sp"
        android:fontFamily="@font/lobster"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/regemail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintWidth_percent=".8"
        android:drawableLeft="@drawable/baseline_carpenter_24"
        android:drawablePadding="13dp"
        android:backgroundTint="#CCCCCC"
        />
    <Button
        android:onClick="mainActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/registerBtn"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/regpassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/bg_btn_design"
        app:layout_constraintVertical_bias=".5"
        app:layout_constraintWidth_percent=".7"/>
    <TextView
        android:id="@+id/regalready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Register?"
        android:textColor="@color/white"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/registerBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias=".4"
        />

    <TextView
        android:id="@+id/regsignin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signin"
        android:onClick="SignIn"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginLeft="10dp"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/regalready"
        app:layout_constraintTop_toBottomOf="@+id/registerBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>