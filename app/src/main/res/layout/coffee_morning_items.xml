<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/imgviewfromcfmorning"
        android:src="@drawable/cfmorning"
        android:scaleType="centerCrop"
        android:foreground="@drawable/foreground_design"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textColor="@color/white"
        android:id="@+id/namefromcfmorning"
        android:text="morning"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="@+id/imgviewfromcfmorning"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/amiri"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:id="@+id/descfromcfmorning"
        android:text="desc desc desc desc desc desc desc desc desc desc "
        app:layout_constraintTop_toBottomOf="@+id/namefromcfmorning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/amiri"
        android:textSize="16sp"
        android:textColor="@color/teal_200"
        android:id="@+id/notefromcfmorning"
        android:text="discount"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/descfromcfmorning"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp"

        />
</androidx.constraintlayout.widget.ConstraintLayout>